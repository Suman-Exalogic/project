<html>
<head>
<title>Employee Edit Form</title>
<style type="text/css">
	h3{
  font-family: Calibri;
  font-size: 25pt;
  font-style: normal;
  font-weight: bold;
  color:black;
  text-align: center;
  text-decoration: underline;
}

table{
  font-family: Calibri;
  color:black;
  font-size: 11pt;
  font-style: normal;
  font-weight: bold;
  background-color:white;
  border-collapse: collapse;
  border: 2px solid navy;
}
table.inner{
  border: 0px;
}
</style>
</head>

<body>
	<div class="topnav">
  		<a href="/users">Home</a>
  		<a href="/users/new">Employee Registration</a>
  		<a href="/logout">Logout</a>
	</div>
	<h3>EMPLOYEE EDIT FORM</h3>
  <%= form_for @user do |f|%>
  <table align="center" cellpadding = "10">
  <!----- First Name ---------------------------------------------------------->
  <tr>
  <td>FIRST NAME</td>
  <td><%= f.text_field :fname, :required=>true%>
  </td>
  </tr>

  <!----- Last Name ---------------------------------------------------------->
  <tr>
  <td>LAST NAME</td>
  <td><%= f.text_field :lname, :required=>true%></td>
  </tr>

  <!----- Date Of Birth -------------------------------------------------------->
  <tr>
  <td>DATE OF BIRTH</td>
  <td><%= f.date_field :dob, :required=>true%></td>
  </tr>

  <!----- Email Id ---------------------------------------------------------->
  <tr>
  <td>EMAIL ID</td>
  <td><%= f.email_field :email, :required=>true%></td>
  </tr>

  <!----- Mobile Number ---------------------------------------------------------->
  <tr>
  <td>MOBILE NUMBER</td>
  <td><%= f.text_field :mobile, :pattern=>'\d*', :maxlength=>10, :minlength=>10%></td>
  </tr>

  <!----- Gender ----------------------------------------------------------->
  <tr>
  <td>GENDER</td>
  <td><%= f.select :gender, [['Gender',nil],'Male','Female']%></td>
  </tr>

  <!----- Address ---------------------------------------------------------->
  <tr>
  <td>ADDRESS <br /><br /><br /></td>
  <td><%= f.text_area :address, :rows => 1%></td>
  </tr>

  <!----- City ---------------------------------------------------------->
  <tr>
  <td>CITY</td>
  <td><%= f.text_field :city%></td>
  </tr>

  <!----- State ---------------------------------------------------------->
  <tr>
  <td>STATE</td>
  <td><%= f.select :state, [['State',nil],'Andaman and Nicobar Islands','Andhra Pradesh','Arunachal Pradesh','Assam',
  'Bihar','Chandigarh','Chhattisgarh','Dadra and Nagar Haveli','Daman and Diu','Delhi','Goa','Gujarat','Haryana',
  'Himachal Pradesh','Jammu and Kashmir','Jharkhand','Karnataka','Kerala','Ladakh','Lakshadweep','Madhya Pradesh',
  'Maharashtra','Manipur','Meghalaya','Mizoram','Nagaland','Odisha','Puducherry','Punjab','Rajasthan','Sikkim','Tamil Nadu',
  'Telangana','Tripura','Uttar Pradesh','Uttarakhand','West Bengal']%></td>
  </tr>

  <!----- Country ---------------------------------------------------------->
  <tr>
  <td>COUNTRY</td>
  <td><%= f.select :country, [['Country',nil],'India']%></td>
  </tr>

  <!----- Pin Code ---------------------------------------------------------->
  <tr>
  <td>PIN CODE</td>
  <td><%= f.text_field :pincode, :pattern=>'\d*', :maxlength=>6, :minlength=>6%></td>
  </tr>


  <!----- Blood Type ---------------------------------------------------------->

  <tr>
  <td>BLOOD TYPE <br /><br /><br /></td>
  <td>
  <%= f.select :blood, [['Blood Type',nil],'AB+','AB-','A+','A-','B+','B-','O+','O-']%>
  </td>
  </tr>

  <!----- Emergency Contact Name ---------------------------------------------------------->
  <tr>
  <td>EMERGENCY CONTACT NAME</td>
<td><%= f.text_field :ename%></td>
  </tr>


  <!----- Emergency Contact Number ---------------------------------------------------------->
  <tr>
  <td>EMERGENCY CONTACT NUMBER</td>
  <td><%= f.text_field :econtact, :pattern=>'\d*', :maxlength=>10, :minlength=>10%></td>
  </tr>


  <!----- Primary Skill ---------------------------------------------------------->
  <tr>
  <td>PRIMARY SKILL</td>
<td><%= f.text_field :pskill%></td>
  </tr>

  <!----- Secondary Skill 1 ---------------------------------------------------------->
  <tr>
  <td> SECONDARY SKILL 1</td>
  <td><%= f.text_field :sskill1%></td>
  </tr>

  <!----- Secondary Skill 2 ---------------------------------------------------------->
  <tr>
  <td> SECONDARY SKILL 2</td>
<td><%= f.text_field :sskill2%></td>
  </tr>

  <tr>
  <td>TYPE <br /><br /><br /></td>
  <td>
  <%=f.select :role,["Employee","Admin"]%>
  </td>
  </tr>

  <tr>
  <td> PASSWORD</td>
  <td><%= f.password_field :password%></td>
  </tr>

  <tr>
  <td> CONFIRM PASSWORD</td>
  <td><%= f.password_field :password_confirmation%></td>
  </tr>


  <!----- Submit and Reset ------------------------------------------------->
  <tr>
  <td colspan="2" align="center">
  <input type="submit" value="Update">
  </td>
  </tr>
  </table>

  <% end %>

</body>
</html>
