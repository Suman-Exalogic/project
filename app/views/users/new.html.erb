<html>
<head>
<title>Employee Registration Form</title>
<style type="text/css">
	h3{
  font-family: Calibri;
  font-size: 25pt;
  font-style: normal;
  font-weight: bold;
  color:black;
  text-align: center;
  text-decoration: underline;
}

table{
  font-family: Calibri;
  color:black;
  font-size: 11pt;
  font-style: normal;
  font-weight: bold;
  background-color:white;
  border-collapse: collapse;
  border: 2px solid navy;
}
table.inner{
  border: 0px;
}
</style>
</head>

<body>
	<div class="topnav">
  		<a href="/users">Home</a>
  		<a class="active" href="/users/new">Employee Registration</a>
			<%= link_to "Logout", signout_path, method: :delete, data: {confirm: "Are you sure???"} %>

	</div>
	<h3>EMPLOYEE REGISTRATION FORM</h3>
	<form action="/users" method="post">
	<table align="center" cellpadding = "10">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
	<!----- First Name ---------------------------------------------------------->
	<tr>
	<td>FIRST NAME</td>
	<td><input type="text" name="login[fname]" maxlength="30"/>
	</td>
	</tr>

	<!----- Last Name ---------------------------------------------------------->
	<tr>
	<td>LAST NAME</td>
	<td><input type="text" name="login[lname]" maxlength="30"/>
	</td>
	</tr>

	<!----- Date Of Birth -------------------------------------------------------->
	<tr>
	<td>DATE OF BIRTH</td>

	<td>
	<input type="date" name="login[dob]">
	</td>
	</tr>

	<!----- Email Id ---------------------------------------------------------->
	<tr>
	<td>EMAIL ID</td>
	<td><input type="email" name="login[email]" maxlength="100" required/></td>
	</tr>

	<!----- Mobile Number ---------------------------------------------------------->
	<tr>
	<td>MOBILE NUMBER</td>
	<td>
	<input type="number" name="login[mobile]" maxlength="10" />
	(10 digit number)
	</td>
	</tr>

	<!----- Gender ----------------------------------------------------------->
	<tr>
	<td>GENDER</td>
	<td>
	<select name="login[gender]">
	<option value=nil>Gender</option>
	<option value="Male">Male</option>
	<option value="Female">Female</option>
	</select>
	</td>
	</tr>

	<!----- Address ---------------------------------------------------------->
	<tr>
	<td>ADDRESS <br /><br /><br /></td>
	<td><textarea name="login[address]" rows="4" cols="30"></textarea></td>
	</tr>

	<!----- City ---------------------------------------------------------->
	<tr>
	<td>CITY</td>
	<td><input type="text" name="login[city]" maxlength="30" />
	</td>
	</tr>

	<!----- State ---------------------------------------------------------->
	<tr>
	<td>STATE</td>
	<td><input type="text" name="login[state]" maxlength="30" />
	</td>
	</tr>

	<!----- Country ---------------------------------------------------------->
	<tr>
	<td>COUNTRY</td>
	<td><input type="text" name="logn[country]" value="India" readonly="readonly" /></td>
	</tr>

	<!----- Pin Code ---------------------------------------------------------->
	<tr>
	<td>PIN CODE</td>
	<td><input type="number" name="login[pincode]" maxlength="6" />
	(6 digit number)
	</td>
	</tr>


	<!----- Blood Type ---------------------------------------------------------->

	<tr>
	<td>BLOOD TYPE <br /><br /><br /></td>
	<td>
	<select name="login[blood]" id="Blood_Type">
	<option value=nil>Blood Group</option>
	<option value="A+">A+</option>
	<option value="B+">B+</option>
	<option value="O+">O+</option>
	<option value="AB+">AB+</option>
	<option value="A-">A-</option>
	<option value="B-">B-</option>
	<option value="O-">O-</option>
	<option value="AB-">AB-</option>
	</td>
	</tr>

	<!----- Emergency Contact Name ---------------------------------------------------------->
	<tr>
	<td>EMERGENCY CONTACT NAME</td>
	<td><input type="text" name="login[ename]" maxlength="30"/>
	</td>
	</tr>


	<!----- Emergency Contact Number ---------------------------------------------------------->
	<tr>
	<td>EMERGENCY CONTACT NUMBER</td>
	<td><input type="number" name="login[econtact]" maxlength="10" /></td>
	</tr>


	<!----- Primary Skill ---------------------------------------------------------->
	<tr>
	<td>PRIMARY SKILL</td>
	<td><input type="text" name="login[pskill]" maxlength="100"/>
	</td>
	</tr>

	<!----- Secondary Skill 1 ---------------------------------------------------------->
	<tr>
	<td> SECONDARY SKILL 1</td>
	<td><input type="text" name="login[sskill1]" maxlength="100"/>
	</td>
	</tr>

	<!----- Secondary Skill 2 ---------------------------------------------------------->
	<tr>
	<td> SECONDARY SKILL 2</td>
	<td><input type="text" name="login[sskill2]" maxlength="100"/>
	</td>
	</tr>

	<tr>
	<td>TYPE <br /><br /><br /></td>
	<td>
	<select name="login[role]" id="Type">
	<option value="employee">Employee</option>
	<option value="admin">Admin</option></select>
	</td>
	</tr>

	<tr>
	<td> PASSWORD</td>
	<td>
	  <input type="password" name="login[password]" required>
	</td>
	</tr>

	<tr>
	<td> CONFIRM PASSWORD</td>
	<td>
	  <input type="password" name="login[password_confirmation]" required>
	</td>
	</tr>


	<!----- Submit and Reset ------------------------------------------------->
	<tr>
	<td colspan="2" align="center">
	<input type="submit" value="Submit">
	</td>
	</tr>
	</table>


	</form>

</body>
</html>
