<html>
<head>
<title></title>
<style type="text/css">
	h3{
  font-family: Calibri;
  font-size: 25pt;
  font-style: normal;
  font-weight: bold;
  color:black;
  text-align: center;
  text-decoration: underline;
}
td {
 padding: 8px;
 text-align: left;
 border-bottom: 1px solid #ddd;
}
tr:hover {background-color:#f5f5f5;}


table{
  font-family: Calibri;
  color:black;
  font-size: 11pt;
  font-style: normal;
  font-weight: bold;
  background-color:white;
  border-collapse: collapse;
  border: 2px solid navy;
  width: 500px;
}
table.inner{
  border: 3px;
}

a:link, a:visited {
  background-color: silver;
  color: black;
  padding: 14px 25px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
}

a:hover, a:active {
  background-color: green;
}
.bt{ text-decoration:none; text-align: center;}
</style>
</head>
<body style="background-color:#E6ECE2;">
	<div class="topnav">
    <% if session[:user_type]=='admin' %>
  		<a href="/users">Home</a>
  		<a href="/users/new">Employee Registration</a>
    <%else%>
      <a href="#">Home</a>
    <%end%>
  <%= link_to "Logout", signout_path, method: :delete, data: {confirm: "Are you sure???"} %>
	</div>

<% if session[:user_type]=='admin'%>
<legend><h1 style="text-align: center;"></h1></legend>
<% else %>
<legend><h1 style="text-align: center;">Welcome <%= @user.fname%></h1></legend>
<%end%>
	
<h1 style="text-align: center">PERSONAL DETAILS</h1>
  <table align="center" cellpadding = "5"  margin-left = "auto"    margin-right = "auto">
  <!----- First Name ---------------------------------------------------------->
  <tr>
  <td>FIRST NAME</td>
  <td><%= @user.fname%>
  </td>
  </tr>

  <!----- Last Name ---------------------------------------------------------->
  <tr>
  <td>LAST NAME</td>
  <td><%= @user.lname%></td>
  </tr>

  <!----- Date Of Birth -------------------------------------------------------->
  <tr>
  <td>DATE OF BIRTH</td>
  <td><%= @user.dob%></td>
  </tr>

  <!----- Email Id ---------------------------------------------------------->
  <tr>
  <td>EMAIL ID</td>
  <td><%= @user.email%></td>
  </tr>

  <!----- Mobile Number ---------------------------------------------------------->
  <tr>
  <td>MOBILE NUMBER</td>
  <td><%= @user.mobile%></td>
  </tr>

  <!----- Gender ----------------------------------------------------------->
  <tr>
  <td>GENDER</td>
  <td><%= @user.gender%></td>
  </tr>

  <!----- Address ---------------------------------------------------------->
  <tr>
  <td>ADDRESS</td>
  <td><%= @user.address%></td>
  </tr>

  <!----- City ---------------------------------------------------------->
  <tr>
  <td>CITY</td>
  <td><%= @user.city%></td>
  </tr>

  <!----- State ---------------------------------------------------------->
  <tr>
  <td>STATE</td>
  <td><%= @user.state%></td>
  </tr>

  <!----- Country ---------------------------------------------------------->
  <tr>
  <td>COUNTRY</td>
  <td><%= @user.country%></td>
  </tr>

  <!----- Pin Code ---------------------------------------------------------->
  <tr>
  <td>PIN CODE</td>
  <td><%= @user.pincode%></td>
  </tr>


  <!----- Blood Type ---------------------------------------------------------->

  <tr>
  <td>BLOOD TYPE</td>
  <td>
  <%= @user.blood%>
  </td>
  </tr>

  <!----- Emergency Contact Name ---------------------------------------------------------->
  <tr>
  <td>EMERGENCY CONTACT NAME</td>
<td><%= @user.ename%></td>
  </tr>


  <!----- Emergency Contact Number ---------------------------------------------------------->
  <tr>
  <td>EMERGENCY CONTACT NUMBER</td>
  <td><%= @user.econtact%></td>
  </tr>


  <!----- Primary Skill ---------------------------------------------------------->
  <tr>
  <td>PRIMARY SKILL</td>
<td><%= @user.pskill%></td>
  </tr>

  <!----- Secondary Skill 1 ---------------------------------------------------------->
  <tr>
  <td> SECONDARY SKILL 1</td>
  <td><%= @user.sskill1%></td>
  </tr>

  <!----- Secondary Skill 2 ---------------------------------------------------------->
  <tr>
  <td> SECONDARY SKILL 2</td>
<td><%= @user.sskill2%></td>
  </tr>

  <tr>
  <td>TYPE</td>
  <td>
  <%=@user.role%>
  </td>
  </tr>
</table>
<br><br>
</div>
<div class = "bt">
<a href="<%= suman_path(@user) %>">Salary Details</a>
</div>
</body>
</html>
