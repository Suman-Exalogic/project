  <td>EMERGENCY CONTACT NAME</td>
<td><%= @user.ename%></td>
  </tr>


  <!----- Emergency Contact Number ---------------------------------------------------------->
  <tr>
  <td>EMERGENCY CONTACT NUMBER</td>
  <td><%= @user.econtact%></td>
  </tr>


  <!----- Primary Skill ---------------------------------------------------------->
  <tr>
  <td>PRIMARY SKILL</td>
<td><%= @user.pskill%></td>
  </tr>

  <!----- Secondary Skill 1 ---------------------------------------------------------->
  <tr>
  <td> SECONDARY SKILL 1</td>
  <td><%= @user.sskill1%></td>
  </tr>

  <!----- Secondary Skill 2 ---------------------------------------------------------->
  <tr>
  <td> SECONDARY SKILL 2</td>
<td><%= @user.sskill2%></td>
  </tr>

  <tr>
  <td>TYPE</td>
  <td>
  <%=@user.role%>
  </td>
  </tr>
